<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_pattern_background"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iiabLogo"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            app:srcCompat="@drawable/ic_iiab_logo_big" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Arabi Islami mobile \nUAT"
            android:textColor="@color/iiab_color"
            android:textSize="22sp"
            android:textStyle="bold" />

        <com.example.getiiabotpapp.CustomSpinner
            android:id="@+id/env_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:dropDownVerticalOffset="40dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_spinner_down"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />


        <com.example.getiiabotpapp.CustomSpinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:dropDownVerticalOffset="40dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_spinner_down"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            tools:text="000000"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/iiab_color"
            android:textSize="26sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_otp_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            tools:text="your otp message"
            android:textColor="@color/iiab_color"
            android:layout_marginHorizontal="16dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/iiab_color"
            android:layout_gravity="center"
            android:text="Get OTP" />
    </LinearLayout>


</ScrollView>